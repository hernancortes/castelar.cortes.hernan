
@{
    ViewBag.Title = "Ejercicio 5";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ejercicio de selectores</title>
</head>
<body>
    <style>
        .fila1 {
            color: teal;
        }

        .fila2 {
            color: red;
        }

        .fila3 {
            color: blue;
        }

        .fila4 {
            color: orange;
        }

        .fila5 {
            color: purple;
        }

        .fila6 {
            color: olive;
        }

        .fila7 {
            color: fuchsia;
        }

        .fila8 {
            color: green;
        }

        td + td {
            background-color: red;
        }
            /*2 columna*/
            td + td + td {
                background-color: green;
            }
                /*3 columna*/
                td + td + td + td {
                    background-color: blue;
                }
        /*4 columna*/
        table {
            width: 250px;
            margin: 0 auto;
        }

        td {
            padding: 20px;
        }

        table, tr, th, td {
            border: 1px solid black;
        }
    </style>

    <table border="1">
        <tr class="fila1"><td>teal</td><td>teal</td><td>teal</td><td>teal</td></tr>
        <tr class="fila2"><td>red</td><td>red</td><td>red</td><td>red</td></tr>
        <tr class="fila3"><td>blue</td><td>blue</td><td>blue</td><td>blue</td></tr>
        <tr class="fila4"><td>orange</td><td>orange</td><td>orange</td><td>orange</td></tr>
        <tr class="fila5"><td>purple</td><td>purple</td><td>purple</td><td>purple</td></tr>
        <tr class="fila6"><td>olive</td><td>olive</td><td>olive</td><td>olive</td></tr>
        <tr class="fila7"><td>fuchsia</td><td>fuchsia</td><td>fuchsia</td><td>fuchsia</td></tr>
        <tr class="fila8"><td>green</td><td>green</td><td>green</td><td>green</td></tr>
    </table>

</body>
</html>